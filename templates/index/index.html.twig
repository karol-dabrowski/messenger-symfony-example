{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-center">Your notes</h1>
    <ul>
        {% for note in notes %}
            <li>
                <a>
                    <form action="/note/delete/{{ note.id }}" method="post">
                        <button class="btn btn-sm">X</button>
                    </form>
                    <h4>{{ note.title }}</h4>
                    <p>{{ note.description }}</p>
                </a>
            </li>
        {% endfor %}
    </ul>
    <div class="text-center py-3">
        <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#addNoteModal">New note</button>
    </div>

    {% include 'index/addNoteModal.html.twig' %}
{% endblock %}